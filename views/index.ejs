<img src="/img/office.webp" alt="image of an empty office" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="articles__ul">

        <% data.forEach(post => { %> <!--LOOPS OVER DATA TO PLACE ALL THE POSTS-->
            <li>
                <a href="/post/<%=  post._id %>">
                    <span><%=  post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>

        

        
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>

     
    <% } %>
</section>